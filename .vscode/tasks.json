{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "echoCommand": true,
    "options": {
        "cwd": "${workspaceFolder}",
    },
    "tasks": [
        {
            "label": "build",
            "command": "go build",
            "args": [
                "-x"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "command": "go test",
            "args": [],
            "group": "test"
        },
        {
            "label": "publish",
            "command": "fyne package",
            "args": [
                "-release",
                "-name",
                "${workspaceFolderBasename}"
            ],
            "group": "build",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}